<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= form_tag "/posts/#{@post.id}/add_comment", method: :get, remote: true do %>
  <%= text_field_tag :content %>
  <%= submit_tag :sumbit %>
<% end %>

<div id="comments">
  <% @post.comments.each do |comment| %>
    <p><%= comment.content %></p>
  <% end %>
</div>
